    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var copyButton = document.getElementById("copyButton");
      if (copyButton) {
        copyButton.addEventListener("click", copyText);
      }

      function copyText() {
        var input = document.getElementById("myInput");
        input.select();
        document.execCommand("copy");
      }

      const emojis = ["😀", "😂", "😍", "😎", "🤔", "😊", "🙌", "🎉", "👍", "❤️", "🌟", "🔥", "🚀", "🌈", "💡", "📚", "💻", "⚽", "🍔", "🎵"];
      const emojiButton = document.getElementById("emoji");
      const emojiList = document.getElementById("emojiList");

      emojiButton.addEventListener("click", function() {
        emojiList.innerHTML = ""; // Očistimo prije nego dodamo nove emojije

        emojis.forEach(emoji => {
          const emojiButton = document.createElement("button");
          emojiButton.innerText = emoji;
          emojiButton.addEventListener("click", function() {
            const input = document.getElementById("myInput");
            input.value += emoji;
            emojiList.style.display = "none";
          });
          emojiList.appendChild(emojiButton);
        });

        // Pozicioniramo prozor s emojijima ispod buttona
        const buttonPosition = emojiButton.getBoundingClientRect();
        emojiList.style.top = `${buttonPosition.bottom}px`;
        emojiList.style.left = `${buttonPosition.left}px`;

        emojiList.style.display = "block";
      });

      document.addEventListener("click", function(e) {
        if (e.target !== emojiButton && e.target.parentNode !== emojiList) {
          emojiList.style.display = "none";
        }
      });
    });
  </script>


  
 


  
